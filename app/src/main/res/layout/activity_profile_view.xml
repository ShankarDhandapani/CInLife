<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        tools:ignore="ScrollViewSize">

        <ImageView
            android:id="@+id/user_profile_picture_at_student_or_management_login"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="10" />
        <!--name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Name "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Name_of_the_current_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

        </LinearLayout>
        <!--Email-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Email "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Email_id_of_the_current_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

        </LinearLayout>
        <!--Phone-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Phone Number "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/phone_number_of_the_current_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

        </LinearLayout>
        <!--Gender-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Gender "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/gender_of_the_current_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

        </LinearLayout>
        <!--Worker Type-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="@string/type"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/worker_type_of_the_current_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

        </LinearLayout>
        <!--address-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Address "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/address_of_the_current_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

        </LinearLayout>
        <!--college-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Name of the College "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/name_of_the_college_of_the_current_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

        </LinearLayout>
        <!--project-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Name of the project "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/name_of_the_project_of_the_current_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

        </LinearLayout>
        <!--duration-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Duration"
            android:textColor="#000000"
            android:textSize="20dp" />
        <!--from-to-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="40">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="From "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/from_date_of_the_current_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="To "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/to_date_of_the_current_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>